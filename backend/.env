ENVIRONMENT=development

# Database
DATABASE_URL=postgresql+asyncpg://studyin_user:changeme@localhost:5432/studyin
DB_HOST=localhost
DB_PORT=5432
DB_NAME=studyin
DB_USER=studyin_user
DB_PASSWORD=changeme

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=changeme
REDIS_URL=redis://:changeme@localhost:6379/0

# JWT Secrets
JWT_ACCESS_SECRET=local-access-secret-change-me
JWT_REFRESH_SECRET=local-refresh-secret-change-me
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# File Upload
MAX_UPLOAD_SIZE=52428800
USER_STORAGE_QUOTA=5368709120
UPLOAD_DIR=./uploads
CDN_DOMAIN=cdn.local.studyin

# ClamAV
CLAMAV_HOST=localhost
CLAMAV_PORT=3310
CLAMAV_SOCKET=/var/run/clamav/clamd.ctl
CLAMAV_TIMEOUT=30

# CORS
CORS_ALLOW_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_ALLOW_HEADERS=Authorization,Content-Type,X-CSRF-Token

# External Services
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
GOOGLE_API_KEY=
SENTRY_DSN=

# Monitoring
PROMETHEUS_PORT=9090
LOG_LEVEL=INFO
