ENVIRONMENT=development

# Database
DATABASE_URL=postgresql+asyncpg://studyin_user:changeme@postgres:5432/studyin
DB_HOST=postgres
DB_PORT=5432
DB_NAME=studyin
DB_USER=studyin_user
DB_PASSWORD=changeme

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=changeme
REDIS_URL=redis://:changeme@redis:6379/0

# JWT Secrets
JWT_ACCESS_SECRET=change-me-access-secret
JWT_REFRESH_SECRET=change-me-refresh-secret
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# File Upload
MAX_UPLOAD_SIZE=52428800
USER_STORAGE_QUOTA=5368709120
UPLOAD_DIR=/var/www/studyin/uploads
CDN_DOMAIN=cdn.studyin.app

# ClamAV
CLAMAV_HOST=clamav
CLAMAV_PORT=3310
CLAMAV_SOCKET=/var/run/clamav/clamd.ctl
CLAMAV_TIMEOUT=30

# CORS
CORS_ALLOW_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_ALLOW_HEADERS=Authorization,Content-Type,X-CSRF-Token

# External Services
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
GOOGLE_API_KEY=
GEMINI_API_KEY=
GEMINI_EMBEDDING_MODEL=gemini-embedding-001
GEMINI_EMBEDDING_DIM=1536
GEMINI_EMBEDDING_MODEL=gemini-embedding-001
GEMINI_EMBEDDING_DIM=1536
SENTRY_DSN=

# Monitoring
PROMETHEUS_PORT=9090
LOG_LEVEL=INFO

# --- LLM Provider Switch (dev-friendly) ---
# Use Codex CLI (default)
LLM_PROVIDER=codex_cli

# To use local ChatMock instead, set:
# LLM_PROVIDER=openai_chatmock
# And point to your local server (already running on 127.0.0.1:8801):
# OPENAI_BASE_URL=http://127.0.0.1:8801/v1
# OPENAI_API_KEY=x
# OPENAI_DEFAULT_MODEL=gpt-5
