{
  "servers": {
    "codex-mcp": {
      "command": "npx",
      "args": ["codex-mcp-server", "--workspace", "/path/to/repo"],
      "transport": "stdio",
      "env": {
        "ALLOW_SHELL": "true"
      },
      "enabled": true
    },
    "chrome-devtools-mcp": {
      "command": "npx",
      "args": [
        "chrome-devtools-mcp",
        "--target",
        "http://localhost:3000",
        "--chrome-port",
        "9222"
      ],
      "transport": "stdio",
      "enabled": true
    }
  }
}
